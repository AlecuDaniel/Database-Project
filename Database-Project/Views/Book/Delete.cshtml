@model Database_Project.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<h2>Delete Book</h2>

<h4>Are you sure you want to delete this book?</h4>
<div>
    <h5>@Model.Title</h5>
    <dl class="row">
        <dt class="col-sm-2">Authors</dt>
        <dd class="col-sm-10">@Model.Authors</dd>

        <dt class="col-sm-2">Publisher</dt>
        <dd class="col-sm-10">@Model.Publisher</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
