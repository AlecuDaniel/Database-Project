@model Database_Project.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<link rel="stylesheet" href="~/css/style.css" />
<link rel="stylesheet" href="~/css/general.css" />

<h2>Delete Book</h2>

<h3 class="text-danger">Are you sure you want to delete this book?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Cover</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" alt="Book cover" class="img-thumbnail" style="max-height: 150px;" />
            }
            else
            {
                <span class="text-muted">No image</span>
            }
        </dd>

        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">ISBN</dt>
        <dd class="col-sm-10">@Model.ISBN</dd>

        <dt class="col-sm-2">Authors</dt>
        <dd class="col-sm-10">@Model.Authors</dd>

        <dt class="col-sm-2">Publisher</dt>
        <dd class="col-sm-10">@Model.Publisher</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </form>
</div>