@model IEnumerable<Database_Project.Models.BookStock>

<link rel="stylesheet" href="~/css/style.css" />
<link rel="stylesheet" href="~/css/general.css" />

<h2>Book Stocks</h2>

<table class="table">
    <thead>
        <tr>
            <th>Book</th>
            <th>Library Branch</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stock in Model)
        {
            <tr>
                <td>@stock.Book.Title</td>
                <td>@stock.LibraryBranch.Name</td>
                <td>@stock.Quantity</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@stock.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@stock.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New BookStock</a>
