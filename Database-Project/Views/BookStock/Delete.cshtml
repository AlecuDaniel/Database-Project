@model Database_Project.Models.BookStock

<link rel="stylesheet" href="~/css/style.css" />
<link rel="stylesheet" href="~/css/general.css" />

<h2>Delete Book Stock</h2>

<h4>Are you sure you want to delete this record?</h4>
<dl class="row">
    <dt class="col-sm-2">Book</dt>
    <dd class="col-sm-10">@Model.Book.Title</dd>

    <dt class="col-sm-2">Branch</dt>
    <dd class="col-sm-10">@Model.LibraryBranch.Name</dd>

    <dt class="col-sm-2">Quantity</dt>
    <dd class="col-sm-10">@Model.Quantity</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post" asp-controller="BookStock">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
