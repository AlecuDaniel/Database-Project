@page
@model Database_Project.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/general.css" />
<link rel="stylesheet" href="~/css/sign-up.css" />

<section class="section-sign-up container margin-bottom-md">
    <form method="post" class="sign-up-container">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="sign-up-group">
            <span class="sign-up-input-label">First Name</span>
            <input asp-for="Input.FirstName" class="sign-up-input-box" />
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
        </div>

        <div class="sign-up-group">
            <span class="sign-up-input-label">Last Name</span>
            <input asp-for="Input.LastName" class="sign-up-input-box" />
            <span asp-validation-for="Input.LastName" class="text-danger"></span>
        </div>

        <div class="sign-up-group">
            <span class="sign-up-input-label">Email</span>
            <input asp-for="Input.Email" class="sign-up-input-box" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="sign-up-group">
            <span class="sign-up-input-label">Password</span>
            <input asp-for="Input.Password" type="password" class="sign-up-input-box" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="sign-up-group">
            <span class="sign-up-input-label">Confirm Password</span>
            <input asp-for="Input.ConfirmPassword" type="password" class="sign-up-input-box" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="sign-up-group">
            <button type="submit" class="sign-up-button">Sign Up</button>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}